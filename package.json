{
  "name": "posterai-platform",
  "version": "1.0.0",
  "description": "AI Poster Platform - Full Stack",
  "scripts": {
    "start": "cd backend && npm start",
    "install:backend": "cd backend && npm install",
    "build": "cd backend && npm install",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "backend/**/*.js": [
      "eslint --config backend/.eslintrc.json --resolve-plugins-relative-to backend --fix"
    ],
    "frontend/src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
